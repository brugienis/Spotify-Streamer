<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.com.kbrsolutions.spotifystreamer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".core.ArtistsActivity"
            android:label="@string/title_activity_artists" >
        </activity>
        <activity
            android:name=".core.TracksActivity"
            android:label="@string/title_activity_tracks"
            android:parentActivityName=".core.ArtistsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.com.kbrsolutions.spotifystreamer.core.ArtistsActivity" />
        </activity>
    </application>

</manifest>

