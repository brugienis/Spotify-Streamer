<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.com.kbrsolutions.spotifystreamer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".core.ArtistsActivity"
            android:label="@string/title_activity_artists" >
        </activity>
        <activity
            android:name=".core.TracksActivity"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_tracks"
            android:parentActivityName=".core.ArtistsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.ArtistsActivity" />
        </activity>
        <activity
            android:name=".core.ArtistsActivityNew"
            android:label="@string/title_activity_artists_activity_new" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

