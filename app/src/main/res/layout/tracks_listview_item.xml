<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical">

    <ImageView
        android:id="@+id/trackImageId"
        android:scaleType="center"
        android:layout_width="@dimen/track_thumbnail_image_size"
        android:layout_height="@dimen/track_thumbnail_image_size"
        android:adjustViewBounds="true"
        android:padding="@dimen/track_thumbnail_image_padding"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/track_text_section_left_padding">

        <TextView
            android:id="@+id/trackNameId"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="artist name"
            android:textSize="@dimen/track_name_size"
            android:gravity="bottom"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/albumNameId"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="album name"
            android:textSize="@dimen/track_name_size"
            android:gravity="top"
            android:textColor="@android:color/black" />

    </LinearLayout>

</LinearLayout>